@model WebApplication2.Models.LogsModel
@{
    ViewBag.Title = "Logs";
}

<h2>Logs</h2>

<div class="dropdown">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Select log type
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">    ALL</a> <br />
        <a class="dropdown-item" href="#">    INFO</a> <br />
        <a class="dropdown-item" href="#">    WARNING</a> <br />
        <a class="dropdown-item" href="#">    ERROR</a>
    </div>
</div>

<br />
<br />
<br />
<table class="table">
    <tr>
        <th>
            Type
        </th>
        <th>
            Message
        </th>
    </tr>
    
    @foreach (var item in Model.logsList)
    {
        <tr>
            <td>
                @Html.DisplayFor(ModelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
        </tr>
    }

</table>

